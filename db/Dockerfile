# Use the official MySQL image as the base image
FROM mysql:latest

# Set root password (change it as per your requirements)
ENV MYSQL_ROOT_PASSWORD=root_password

# Set default database, username, and password (change them as per your requirements)
ENV MYSQL_DATABASE=my_database
ENV MYSQL_USER=my_user
ENV MYSQL_PASSWORD=my_password

# Expose port 3306
EXPOSE 3306

